<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bshealthcare.healthonrent_delivery.Feedback">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/zxing_custom_viewfinder_laser"
        android:gravity="center"
        android:text="Feed Back By User"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/zxing_status_text" />

    <EditText
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="23dp"
        android:background="#6df8f8f8"
        android:ems="10"
        android:gravity="top"
        android:hint="Start Writing FeedBack/ Suggestions here..."
        android:inputType="textMultiLine"
        android:padding="30dp"
        android:textColor="@android:color/background_dark" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/button"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">
    <Button
        android:onClick="skipf"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#145827"
        android:text="Skip" />
    <Button
        android:onClick="submit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#145827"
        android:text="Submit" />
</LinearLayout>


</RelativeLayout>
